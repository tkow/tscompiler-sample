{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "./",
    "typeRoots": ["./typings","./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true
  },
  "filesGlob": ["./**/*.ts"],
  "exclude": ["examples","lib/__tests__","build", "node_modules", "example"],
  "compileOnSave": false
}
